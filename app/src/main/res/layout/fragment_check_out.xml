<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckOutFragment"
    android:gravity="center"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THANH TOÁN"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="27sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Họ và tên : "
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/checkout_txtname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Nhập họ và tên.."
                        android:textColor="@color/text_second"
                        android:textSize="16sp"></EditText>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số điện thoại : "
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/checkout_txtphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Nhập số điện thoại.."
                        android:textColor="@color/text_second"
                        android:textSize="16sp"></EditText>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Địa chỉ : "
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/checkout_txtaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Nhập địa chỉ.."
                        android:textColor="@color/text_second"
                        android:textSize="16sp"></EditText>
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chọn phương thức thanh toán : "
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_second"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Thanh toán tiền mặt khi nhận hàng" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_second"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Thanh toán qua ví điện tử" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_second"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Thanh toán qua tài khoản ngân hàng" />
                    </RadioGroup>
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chọn phương thức giao hàng : "
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_second"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Giao hàng nhanh ( 15.000 VND )" />

                        <RadioButton
                            android:id="@+id/radioButton5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_second"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Giao hàng hỏa tốc ( 30.000 VND )" />

                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TỔNG HÓA ĐƠN : "
                            android:textColor="@color/text_second"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTongGioHang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VND"
                            android:textColor="@color/text_second"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/cart_btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_color"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:enabled="true"
                        android:text="Đặt hàng">
                    </Button>
                    <Button
                        android:id="@+id/cart_btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:enabled="true"
                        android:text="Trở về">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
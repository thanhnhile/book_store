<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginBottom="20dp">
    <ImageView
        android:id="@+id/lv_img"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/book"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp">
    </ImageView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lv_img"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lv_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:minHeight="35dp"
            android:text="Mắt biếc"
            android:textColor="@color/black"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/lv_txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Nguyễn Nhật Ánh"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_txt_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Hoạt động"
                android:textColor="@color/green"></TextView>

            <TextView
                android:id="@+id/lv_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.000"
                android:textColor="@color/black"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/lv_btn_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/primary_button"
            android:text="Sửa"
            android:textAllCaps="false"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/lv_btn_active"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/red_button"
            android:text="Ẩn/hiện"
            android:textAllCaps="false"
            android:textColor="@color/white"></Button>
    </LinearLayout>
</RelativeLayout>